<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:maxHeight="@dimen/qb_px_414"
            android:maxWidth="@dimen/qb_px_375"
            android:layout_width="@dimen/qb_px_200"
            android:layout_height="@dimen/qb_px_200" />

        <Button
            android:id="@+id/btn_saveCode"
            android:layout_width="@dimen/qb_px_240"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_40"
            android:background="@drawable/shape_button"
            android:text="保存二维码"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_14" />
    </LinearLayout>




</RelativeLayout>
