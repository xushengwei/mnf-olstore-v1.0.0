<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corners"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/qb_px_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  姓名  "
            android:textSize="@dimen/qb_px_14" />

        <EditText
            android:maxLength="20"
            android:singleLine="true"
            android:id="@+id/et_inputName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:background="@drawable/shape_login_bg"
            android:hint="请输入姓名"
            android:paddingLeft="@dimen/qb_px_10"
            android:textSize="@dimen/qb_px_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/qb_px_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="@dimen/qb_px_14" />

        <EditText
            android:maxLength="11"
            android:inputType="phone"
            android:id="@+id/et_inputhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:background="@drawable/shape_login_bg"
            android:hint="请输入手机号"
            android:paddingLeft="@dimen/qb_px_10"
            android:textSize="@dimen/qb_px_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/qb_px_16"
        android:paddingTop="@dimen/qb_px_16">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/qb_px_120"
            android:layout_height="@dimen/qb_px_40"
            android:background="@color/color_light_gray"
            android:gravity="center"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_comt"
            android:layout_width="@dimen/qb_px_120"
            android:layout_height="@dimen/qb_px_40"
            android:layout_marginLeft="@dimen/qb_px_22"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_white" />
    </LinearLayout>
</LinearLayout>
