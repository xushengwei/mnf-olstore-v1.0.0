<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corners"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_messageContent"
        android:gravity="center"
        android:textSize="@dimen/qb_px_16"
        android:text="确认吗？"
        android:padding="@dimen/qb_px_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/qb_px_16"
        android:paddingTop="@dimen/qb_px_16">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/qb_px_120"
            android:layout_height="@dimen/qb_px_40"
            android:background="@color/color_light_gray"
            android:gravity="center"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_comt"
            android:layout_width="@dimen/qb_px_120"
            android:layout_height="@dimen/qb_px_40"
            android:layout_marginLeft="@dimen/qb_px_22"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_white" />
    </LinearLayout>
</LinearLayout>
