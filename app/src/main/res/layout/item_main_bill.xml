<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_left_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@color/gray_back"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/qb_px_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称："
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

            <TextView
                android:id="@+id/tv_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="世界一号苹果"
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

            <TextView
                android:id="@+id/tv_orderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000001"
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间："
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

            <TextView
                android:id="@+id/tv_orderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018年01月01日"
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/light_red"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/qb_px_12">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价："
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

            <TextView
                android:id="@+id/tv_goodsBuyPice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首付："
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

            <TextView
                android:id="@+id/tv_goodsDownPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textColor="@color/red_amt"
                android:textSize="@dimen/qb_px_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余款："
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

            <TextView
                android:id="@+id/tv_goodsDownRepayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textColor="@color/textcolor_black"
                android:textSize="@dimen/qb_px_12" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_refund"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_item_storke_red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:ems="1"
            android:gravity="center"
            android:text="缺货退款"
            android:textColor="@color/red_amt"
            android:textSize="@dimen/qb_px_12" />
    </RelativeLayout>


</LinearLayout>
