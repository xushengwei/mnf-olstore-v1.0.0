<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_84"
        android:background="@mipmap/login_app_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_16"
        android:text="(商户端)"
        android:textColor="@color/textcolor_gray"
        android:textSize="@dimen/qb_px_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qb_px_40"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/qb_px_15"
            android:paddingRight="@dimen/qb_px_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_user" />

            <TextView
                android:id="@+id/tv_phoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_16"
                android:background="@null"
                android:hint="手机号码"
                android:inputType="phone"
                android:singleLine="true"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_codeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_45"
            android:layout_marginTop="@dimen/qb_px_8"
            android:background="@drawable/shape_login_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/qb_px_15"
            android:paddingRight="@dimen/qb_px_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_code" />

            <EditText
                android:id="@+id/et_identifyingCode"
                android:layout_width="@dimen/qb_px_120"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_16"
                android:background="@null"
                android:hint="请填写验证码"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_getCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_rb_normal"
                    android:paddingBottom="@dimen/qb_px_9"
                    android:paddingLeft="@dimen/qb_px_19"
                    android:paddingRight="@dimen/qb_px_19"
                    android:paddingTop="@dimen/qb_px_9"
                    android:text="发送验证码"
                    android:textColor="@color/color_white"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_changePhoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_12"
            android:drawableRight="@mipmap/right_xiao"
            android:gravity="center"
            android:text="切换手机号" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="@dimen/qb_px_20"
        android:background="@drawable/shape_button"
        android:text="登录"
        android:textColor="@color/color_white"
        android:textSize="14sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_80"
        android:text="--------    第三方快捷登录    ---------"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_loginByWechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawablePadding="@dimen/qb_px_4"
        android:drawableTop="@mipmap/login_wechat"
        android:gravity="center_horizontal"
        android:text="微信"
        android:textSize="11sp"
        android:visibility="gone" />

</LinearLayout>
