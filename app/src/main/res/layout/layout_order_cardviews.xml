<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/qb_px_4"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_12"
        android:layout_marginLeft="@dimen/qb_px_8"
        android:layout_marginRight="@dimen/qb_px_2"
        android:layout_marginTop="@dimen/qb_px_12"
        android:layout_weight="1"
        android:background="@color/color_white"
        app:cardElevation="@dimen/qb_px_4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/qb_px_7"
            android:layout_marginTop="@dimen/qb_px_11"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_totalIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="￥0.00"
                android:textColor="@color/textcolor_black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计收入"
                android:textColor="@color/textcolor_gray"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_12"
        android:layout_marginLeft="@dimen/qb_px_2"
        android:layout_marginRight="@dimen/qb_px_2"
        android:layout_marginTop="@dimen/qb_px_12"
        android:layout_weight="1"
        android:background="@color/color_white"
        app:cardElevation="@dimen/qb_px_4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/qb_px_7"
            android:layout_marginTop="@dimen/qb_px_11"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_todayIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="￥0.00"
                android:textColor="@color/textcolor_black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日收入"
                android:textColor="@color/textcolor_gray"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_12"
        android:layout_marginLeft="@dimen/qb_px_2"
        android:layout_marginRight="@dimen/qb_px_2"
        android:layout_marginTop="@dimen/qb_px_12"
        android:layout_weight="1"
        android:background="@color/color_white"
        app:cardElevation="@dimen/qb_px_4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/qb_px_7"
            android:layout_marginTop="@dimen/qb_px_11"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_totalCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/textcolor_black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户总数"
                android:textColor="@color/textcolor_gray"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_12"
        android:layout_marginLeft="@dimen/qb_px_2"
        android:layout_marginRight="@dimen/qb_px_8"
        android:layout_marginTop="@dimen/qb_px_12"
        android:layout_weight="1"
        android:background="@color/color_white"
        app:cardElevation="@dimen/qb_px_4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/qb_px_7"
            android:layout_marginTop="@dimen/qb_px_11"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_todayCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/textcolor_black"
                android:textSize="16sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日获客"
                android:textColor="@color/textcolor_gray"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

