<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_back"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:paddingBottom="@dimen/qb_px_17"
        android:paddingLeft="@dimen/qb_px_13"
        android:paddingRight="@dimen/qb_px_13"
        android:paddingTop="@dimen/qb_px_17">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/qb_px_16" />

        <TextView
            android:id="@+id/tv_clerkId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="000-000-000"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/qb_px_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_1"
        android:background="@color/color_white"
        android:paddingBottom="@dimen/qb_px_17"
        android:paddingLeft="@dimen/qb_px_13"
        android:paddingRight="@dimen/qb_px_13"
        android:paddingTop="@dimen/qb_px_17">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/qb_px_16" />

        <TextView
            android:id="@+id/tv_clerkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="name"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/qb_px_16" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_1"
        android:background="@color/color_white"
        android:paddingBottom="@dimen/qb_px_17"
        android:paddingLeft="@dimen/qb_px_13"
        android:paddingRight="@dimen/qb_px_13"
        android:paddingTop="@dimen/qb_px_17">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/qb_px_16" />

        <TextView
            android:id="@+id/tv_clerkPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="13300000000"
            android:textColor="@color/textcolor_black"
            android:textSize="@dimen/qb_px_16" />
    </RelativeLayout>
</LinearLayout>
