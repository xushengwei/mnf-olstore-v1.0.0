<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="nodeProgress">
        <!--节点默认颜色-->
        <attr name="node_color" format="color" />
        <!--节点进度颜色-->
        <attr name="node_progresscolor" format="color" />
        <!--进度条默认颜色-->
        <attr name="node_bar" format="color" />
        <!--进度条默认颜色-->
        <attr name="node_progress_bar" format="color" />
        <!--文字提示颜色-->
        <attr name="node_tip" format="color" />
        <!--进度提示颜色-->
        <attr name="node_progress_tip" format="color" />
        <!-- 几点个数-->
        <attr name="node_num" format="integer" />
        <!-- 当前进度-->
        <attr name="node_current" format="integer" />
        <!--节点半径-->
        <attr name="node_radio" format="dimension" />

        <!-- 节点背景图-->
        <attr name="node_bg" format="reference" />
        <attr name="node_progress_bg" format="reference" />

    </declare-styleable>


    <declare-styleable name="DotsProgressBar">
        <!-- 前进的速度 -->
        <attr name="barSpeed">
            <enum name="normal" value="40"/>
            <enum name="slow" value="80"/>
            <enum name="fast" value="10"/>
        </attr>
        <!-- 节点的数量 -->
        <attr name="barDotsCount" format="integer"/>
        <!-- 节点的圆半径 -->
        <attr name="barDotsRadius" format="dimension|reference"/>
        <!-- 进度条的宽度 -->
        <attr name="barProgressWidth" format="dimension|reference"/>
        <!-- 进度条的背景色 -->
        <attr name="barBackColor" format="color|reference"/>
        <!-- 进度条的前景色 -->
        <attr name="barFrontColor" format="color|reference"/>
    </declare-styleable>

    <attr name="indexBarTextSize" format="dimension" />

    <declare-styleable name="IndexBar">
        <attr name="indexBarTextSize" />
        <attr name="indexBarPressBackground" format="color" />
    </declare-styleable>


    <!-- 进度百分比文字大小 -->
    <attr name="percent_text_size" format="dimension" />
    <!-- 圆形进度条边框大小 -->
    <attr name="stroke_width" format="dimension" />
    <!-- 矩形进度条 四周圆角大小 -->
    <attr name="rect_round" format="dimension" />
    <!-- 矩形进度条 是空心样式还是实心样式 -->
    <attr name="isHorizonStroke" format="boolean" />
    <!-- 进度百分比文字颜色 -->
    <attr name="percent_text_color" format="color|integer" />
    <!-- 进度条背景颜色 -->
    <attr name="progressBarBgColor" format="color|integer" />
    <!-- 扇形进度条颜色 -->
    <attr name="sectorColor" format="color|integer" />
    <!-- 扇形背景颜色 -->
    <attr name="unSweepColor" format="color|integer" />
    <!-- 进度颜色 -->
    <attr name="progressColor" format="color|integer" />
    <!-- 进度文字是否显示百分号 -->
    <attr name="showPercentSign" format="boolean"/>
    <!-- 进度条样式圆形还是矩形 -->
    <attr name="orientation">
        <enum name="horizontal" value="0"/>
        <enum name="circle" value="1"/>
        <enum name="sector" value="2"/>
    </attr>

    <declare-styleable name="cbprogressbar">
        <attr name="percent_text_size"/>
        <attr name="isHorizonStroke"/>
        <attr name="percent_text_color"/>
        <attr name="progressBarBgColor"/>
        <attr name="progressColor"/>
        <attr name="sectorColor"/>
        <attr name="unSweepColor"/>
        <attr name="orientation"/>
        <attr name="stroke_width"/>
        <attr name="rect_round"/>
        <attr name="showPercentSign"/>
    </declare-styleable>



    <attr name="pro_color" format="color" />
    <attr name="rect_color" format="color" />
    <attr name="rect_width" format="dimension" />
    <attr name="pro_width" format="dimension" />
    <attr name="pro_height" format="dimension" />

    <declare-styleable name="TipProgressBar">
        <attr name="tpbTipPaddingVertical" format="dimension|reference" />
        <attr name="tpbTipPaddingHorizontal" format="dimension|reference" />
        <attr name="tpbTipRadius" format="dimension|reference" />
        <attr name="tpbTipTextSize" format="dimension|reference" />
        <attr name="tpbProgressHeight" format="dimension|reference" />

        <attr name="tpbTipColor" format="color|reference" />
        <attr name="tpbTipTextColor" format="color|reference" />
        <attr name="tpbProgressBackgroundColor" format="color|reference" />
        <attr name="tpbProgressColor" format="color|reference" />

        <attr name="tpbTipTextFormat" format="string|reference" />

        <attr name="tpbMaxProgress" format="integer|reference" />
        <attr name="tpbProgress" format="integer|reference" />
    </declare-styleable>
</resources>